<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header_background"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">
        
        <!-- Top Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Panduan Lengkap Huruf Hijaiyah"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="16dp" />
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>
        
        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tabel Lengkap 28 Huruf Hijaiyah dengan Bahasa Isyarat"
            android:textColor="#D5DBDB"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp" />
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F9FA">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            
            <!-- Tabel Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_rounded_bg"
                android:elevation="4dp"
                android:padding="16dp"
                android:orientation="vertical">
                
                <!-- Header Tabel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hijaiyah_green"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Huruf"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Isyarat"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Latin"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>
                
                <!-- RecyclerView untuk menampilkan semua huruf -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_panduan_hijaiyah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
                
            </LinearLayout>
            
            <!-- Footer Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_rounded_bg"
                android:elevation="2dp"
                android:padding="16dp"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Petunjuk Penggunaan"
                    android:textColor="@color/hijaiyah_green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Gunakan tabel ini sebagai panduan untuk mempelajari bentuk isyarat setiap huruf hijaiyah\n• Latih gerakan tangan sesuai dengan simbol isyarat yang ditampilkan\n• Kembali ke halaman utama untuk mempraktikkan pengenalan gesture secara langsung"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>
