<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <!-- Background Atas (Top) - bgatashome.png -->
    <ImageView
        android:id="@+id/img_bg_atas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgatashome"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_guideline_top" />

    <!-- Guideline untuk membagi layar menjadi 3 bagian -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <!-- Background Tengah - bgtengah.png -->
    <ImageView
        android:id="@+id/img_bg_tengah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgtengah"
        android:alpha="0.8"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_guideline_bottom" />

    <!-- Background Bawah (Bottom) - bgbawah.png -->
    <ImageView
        android:id="@+id/img_bg_bawah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgbawah"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Main Content Container - Center -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_guideline_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_gravity="center">

            <!-- Floating Logo/Icon -->
            <ImageView
                android:id="@+id/img_floating_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_app_logo"
                android:background="@drawable/circle_background"
                android:elevation="8dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- App Title -->
            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gesture Recognition"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI-Powered Hand Gesture Detection"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:gravity="center" />

            <!-- Main Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <!-- Start Gesture Recognition Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_gesture"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start Gesture Recognition"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="28dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    android:elevation="8dp"
                    app:strokeWidth="0dp" />

                <!-- About Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_about"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="About"
                    android:textSize="14sp"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="24dp"
                    app:icon="@android:drawable/ic_dialog_info"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    android:elevation="6dp"
                    app:strokeWidth="0dp" />

                <!-- Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Settings"
                    android:textSize="14sp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="24dp"
                    app:icon="@android:drawable/ic_menu_preferences"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    android:elevation="6dp"
                    app:strokeWidth="0dp" />

            </LinearLayout>

            <!-- Version Info -->
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
