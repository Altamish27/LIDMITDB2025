<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <!-- Background Atas (Top) - bgatashome.png -->
    <ImageView
        android:id="@+id/img_bg_atas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgatashome"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_guideline_top" />

    <!-- Guideline untuk membagi layar -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <!-- Background Tengah - bgtengah.png dengan opacity -->
    <ImageView
        android:id="@+id/img_bg_tengah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgtengah"
        android:alpha="0.4"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/center_guideline_bottom" />

    <!-- Background Bawah (Bottom) - bgbawah.png -->
    <ImageView
        android:id="@+id/img_bg_bawah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgbawah"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Modern Jadwal Sholat Card - Top Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/jadwal_sholat_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section dengan 2 area terpisah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:paddingTop="8dp">

                <!-- Top Row: Lokasi dan Jam di kanan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginBottom="12dp">

                    <!-- Right Side: Lokasi dan Jam -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <!-- Location Section with Icon -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_mylocation"
                                android:layout_marginEnd="6dp"
                                android:tint="@color/dark_blue_gray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kuningan, Jawa Barat"
                                android:textSize="13sp"
                                android:textColor="@color/dark_blue_gray"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Time Section - Large and Bold -->
                        <TextView
                            android:id="@+id/tv_current_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.30"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_blue_gray"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Bottom Row: Jadwal Sholat di kiri sejajar dengan gambar Quran -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <!-- Left: Jadwal Sholat di paling bawah -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jadwal Sholat"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-black"
                        android:gravity="start|bottom" />

                    <!-- Right: Quran Image -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/quranhome"
                        android:scaleType="centerCrop"
                        android:contentDescription="Quran Home Image" />

                </LinearLayout>

            </LinearLayout>

            <!-- Prayer Times dengan gradient backgrounds -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center"
                android:background="@drawable/gradient_prayer_yellow"
                android:padding="16dp">

                <!-- Shubuh -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shubuh"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04.30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <!-- Dzuhur -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dzuhur"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.05"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <!-- Ashar -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ashar"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.12"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <!-- Maghrib -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maghrib"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18.10"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <!-- Isya -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isya"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.12"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue_gray"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Feature Cards Grid - Bottom Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/feature_cards_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/jadwal_sholat_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_coba_deteksi">

        <!-- Row 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_hijaiyah"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:alpha="0.85"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_quiz"
            app:layout_constraintWidth_percent="0.31">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_hijaiyah"
                android:padding="12dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huruf Hijaiyah"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Image -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/huruf_hijaiyah"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Progress Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="9sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28/28"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <!-- Progress Bar -->
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:progress="32"
                    android:progressTint="@color/yellow_secondary"
                    android:progressBackgroundTint="#CCFFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_quiz"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:alpha="0.85"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_hijaiyah"
            app:layout_constraintEnd_toStartOf="@+id/card_surat"
            app:layout_constraintWidth_percent="0.31">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_quiz"
                android:padding="12dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Image -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/quiz"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Progress Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="9sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <!-- Progress Bar -->
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:progress="80"
                    android:progressTint="@color/yellow_secondary"
                    android:progressBackgroundTint="#CCFFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_surat"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:alpha="0.85"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_quiz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.31">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_mint"
                android:padding="12dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surat"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Image -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/surat"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Progress Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="9sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/10"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue_gray"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <!-- Progress Bar -->
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:progress="20"
                    android:progressTint="@color/yellow_secondary"
                    android:progressBackgroundTint="#CCFFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_about"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/card_hijaiyah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_settings"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_surat"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:layout_marginBottom="6dp"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/card_quiz"
            app:layout_constraintStart_toEndOf="@+id/btn_about"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_purple"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:layout_marginBottom="6dp"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tombol Coba Deteksi di paling bawah -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_coba_deteksi"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:text="Coba Deteksi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/gradient_button_primary"
        app:layout_constraintTop_toBottomOf="@+id/feature_cards_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/version_info"
        app:cornerRadius="28dp"
        app:icon="@android:drawable/ic_media_play"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        android:elevation="12dp"
        android:stateListAnimator="@null" />

    <!-- Modern Version Info -->
    <LinearLayout
        android:id="@+id/version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_card_white"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="11sp"
            android:textColor="#2C3E50"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/gradient_circle_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Powered"
            android:textSize="11sp"
            android:textColor="@color/teal_secondary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
