<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <!-- Background Atas (Top) - bgatashome.png -->
    <ImageView
        android:id="@+id/img_bg_atas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgatashome"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_guideline_top" />

    <!-- Guideline untuk membagi layar -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <!-- Background Tengah - bgtengah.png dengan opacity -->
    <ImageView
        android:id="@+id/img_bg_tengah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgtengah"
        android:alpha="0.4"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/center_guideline_bottom" />

    <!-- Background Bawah (Bottom) - bgbawah.png -->
    <ImageView
        android:id="@+id/img_bg_bawah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgbawah"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Modern Jadwal Sholat Card - Top Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/jadwal_sholat_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_card_white"
            android:padding="20dp">

            <!-- Header Section with Location and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:layout_marginEnd="8dp"
                            android:tint="#147E7E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kuningan, Jawa Barat"
                            android:textSize="14sp"
                            android:textColor="#147E7E"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jadwal Sholat"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="4dp" />                </LinearLayout>

                <!-- Current Time with gradient background -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_blue"
                    android:padding="12dp"
                    android:minWidth="80dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.30"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIB"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.8" />

                </LinearLayout>

            </LinearLayout>

            <!-- Prayer Times dengan gradient backgrounds -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center">

                <!-- Shubuh -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_mint"
                    android:padding="12dp"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shubuh"
                        android:textSize="10sp"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04.30"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Dzuhur -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_orange"
                    android:padding="12dp"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dzuhur"
                        android:textSize="10sp"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.05"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Ashar (Active) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_blue"
                    android:padding="12dp"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ashar"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:alpha="0.9" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.12"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Maghrib -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_pink"
                    android:padding="12dp"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maghrib"
                        android:textSize="10sp"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18.10"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Isya -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_purple"
                    android:padding="12dp"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isya"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:alpha="0.9" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.12"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Main Content Container - Center -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/jadwal_sholat_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/feature_cards_container"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <!-- Modern App Title with gradient text effect -->
        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gesture Recognition"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="8dp"
            android:shadowColor="#2E3440"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn Arabic Letters with AI"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"
            android:alpha="0.9"
            android:gravity="center" />

        <!-- Modern Start Button dengan gradient -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_gesture"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Recognition"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/gradient_button_primary"
            android:layout_marginHorizontal="32dp"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            app:iconTint="@android:color/white"
            android:elevation="12dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <!-- Modern Feature Cards Grid - Bottom Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/feature_cards_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Row 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_hijaiyah"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_quiz"
            app:layout_constraintWidth_percent="0.32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_mint"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_app_logo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huruf Hijaiyah"
                    android:textSize="11sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 Huruf"
                    android:textSize="9sp"
                    android:textColor="#2C3E50"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_quiz"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_hijaiyah"
            app:layout_constraintEnd_toStartOf="@+id/card_surat"
            app:layout_constraintWidth_percent="0.32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_orange"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:layout_marginBottom="8dp"
                    android:tint="#2C3E50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:textSize="11sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Soal"
                    android:textSize="9sp"
                    android:textColor="#2C3E50"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_surat"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_quiz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_pink"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:layout_marginBottom="8dp"
                    android:tint="#2C3E50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surat"
                    android:textSize="11sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="114 Surat"
                    android:textSize="9sp"
                    android:textColor="#2C3E50"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_about"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/card_hijaiyah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_settings"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_blue"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:layout_marginBottom="6dp"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/card_quiz"
            app:layout_constraintStart_toEndOf="@+id/btn_about"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_card_purple"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:layout_marginBottom="6dp"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Logo with modern gradient -->
    <ImageView
        android:id="@+id/img_floating_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_app_logo"
        android:background="@drawable/gradient_circle_bg"
        android:elevation="16dp"
        android:scaleType="centerInside"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Modern Version Info -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_card_white"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="11sp"
            android:textColor="#2C3E50"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/gradient_circle_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Powered"
            android:textSize="11sp"
            android:textColor="#147E7E"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
