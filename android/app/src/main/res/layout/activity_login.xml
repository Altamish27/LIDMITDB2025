<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Atas (besar) -->
    <ImageView
        android:id="@+id/img_bg_atas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgataslogin"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_guideline_top" />

    <!-- Judul Selamat Datang di bagian atas -->
    <TextView
        android:id="@+id/tv_welcome_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang\nDi Aplikasi Sign Quran"
        android:textAlignment="center"
        android:textColor="#23395D"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guideline atas dan bawah (sama percent seperti activity_home) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <!-- Background Tengah (besar, semi-transparent) -->
    <ImageView
        android:id="@+id/img_bg_tengah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgtengahlogin"
        android:alpha="0.45"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/center_guideline_bottom" />

    <!-- Background Bawah -->
    <ImageView
        android:id="@+id/img_bg_bawah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgbawahlogin"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Konten login ditempatkan di area tengah (antara guidelines) -->
    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_top"
        app:layout_constraintBottom_toBottomOf="@+id/center_guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="190dp"
            android:src="@drawable/gambarkaligrafilogin"
            android:layout_marginBottom="12dp"
            android:contentDescription="Kaligrafi" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="Nama Pengguna"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColorHint="#888888"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="Kata Sandi"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColorHint="#888888"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:text="Masuk"
            android:backgroundTint="#009688"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tanpa_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanpa Login"
            android:backgroundTint="#23395D"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
