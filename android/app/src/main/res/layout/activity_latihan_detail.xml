<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/header_gradient_background"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:layout_alignParentStart="true"
            android:text="Latihan 3"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_alignParentStart="true"
            android:text="Sedang dipelajari - 30 Halaman"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Progress Text -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSubtitle"
            android:layout_alignParentStart="true"
            android:text="3/30 Halaman"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/tvProgress"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="100dp"
            android:progress="10"
            android:progressTint="@color/hijaiyah_yellow"
            android:progressBackgroundTint="@color/white"/>

    </RelativeLayout>

    <!-- Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daftar Halaman"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Filter Button -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semua â–¼"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="@drawable/cr16bc4c4c4"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Filter Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/cr16bc4c4c4"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tabSemua"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Semua"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/gradient_card_hijaiyah"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tabSelesai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selesai"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tabAktif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aktif"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tabTerkunci"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Terkunci"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

            <!-- Huruf List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Lanjutkan Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/hijaiyah_navy">

                <TextView
                    android:id="@+id/btnLanjutkan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="â–¶ Lanjutkan"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"/>

            </androidx.cardview.widget.CardView>

            <!-- Reset Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/darker_gray">

                <TextView
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ðŸ”„ Reset"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Selesai Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSelesaiCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selesai"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="12sp"/>

            </LinearLayout>

            <!-- Aktif Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvAktifCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="12sp"/>

            </LinearLayout>

            <!-- Terkunci Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTerkunciCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terkunci"
                    android:textColor="@color/hijaiyah_navy"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
