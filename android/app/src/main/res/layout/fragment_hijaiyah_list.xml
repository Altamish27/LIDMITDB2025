<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F9FA">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_header_background"
                android:paddingTop="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                
                <!-- Top Navigation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY" />
                    
                    <!-- Decorative dots -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="14dp"
                        android:orientation="vertical">
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/status_indicator_success"
                                android:layout_marginEnd="8dp" />
                            
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_indicator_default" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            
                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/status_indicator_success"
                                android:layout_marginEnd="6dp" />
                            
                            <View
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:background="@drawable/status_indicator_default"
                                android:layout_marginEnd="6dp" />
                            
                            <View
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:background="@drawable/status_indicator_success" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                
                <!-- Title and Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIJAIYAH HURUF"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />
                    
                    <TextView
                        android:id="@+id/tv_progress_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 28 Huruf"
                        android:textColor="#D5DBDB"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <!-- Progress Bar Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_rounded_bg"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="@drawable/progress_bar_bg"
                            android:paddingVertical="2dp"
                            android:orientation="vertical">
                            
                            <ProgressBar
                                android:id="@+id/overall_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="8dp"
                                android:progress="0"
                                android:max="100"
                                android:progressTint="@color/hijaiyah_yellow"
                                android:progressBackgroundTint="@color/hijaiyah_grey" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <TextView
                            android:id="@+id/tv_overall_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress"
                            android:textColor="#D5DBDB"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingTop="24dp"
                android:paddingBottom="2dp"
                android:orientation="vertical">
                
                <!-- Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mulai Belajar"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <!-- Search Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/white_rounded_bg"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="20dp"
                    android:elevation="3dp"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY" />
                    
                    <EditText
                        android:id="@+id/et_search"
                        android:inputType="text"
                        android:hint="Cari Huruf Hijaiyah"
                        android:background="@null"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="1dp" />
                </LinearLayout>
                
                <!-- Letters Grid -->
                <LinearLayout
                    android:id="@+id/letters_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    
                    <!-- Row 1: ا ب -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">
                        
                        <LinearLayout
                            android:id="@+id/letter_alif"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/cr16lr270f1c40ff39c12"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="6dp"
                            android:elevation="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ا"
                                android:textColor="#2C3E50"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ALIF"
                                android:textColor="#2C3E50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:id="@+id/letter_ba"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/cr16bc4c4c4"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginStart="6dp"
                            android:elevation="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ب"
                                android:textColor="#2C3E50"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BA"
                                android:textColor="#2C3E50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <!-- Row 2: ت ث -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">
                        
                        <LinearLayout
                            android:id="@+id/letter_ta"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/cr16bc4c4c4"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="6dp"
                            android:elevation="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ت"
                                android:textColor="#2C3E50"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TA"
                                android:textColor="#2C3E50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:id="@+id/letter_tsa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/cr16bc4c4c4"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginStart="6dp"
                            android:elevation="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ث"
                                android:textColor="#2C3E50"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TSA"
                                android:textColor="#2C3E50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <!-- Row 3: ج ح -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">
                        
                        <LinearLayout
                            android:id="@+id/letter_jim"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/cr16bc4c4c4"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="6dp"
                            android:elevation="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ج"
                                android:textColor="#2C3E50"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JIM"
                                android:textColor="#2C3E50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:id="@+id/letter_ha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/cr16bc4c4c4"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginStart="6dp"
                            android:elevation="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ح"
                                android:textColor="#2C3E50"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HA"
                                android:textColor="#2C3E50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                </LinearLayout>
                
                <!-- RecyclerView hidden for now -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_hijaiyah_letters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
