    <!-- Background Layer 1 - Top -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgatashome"
        android:scaleType="centerCrop" />
    
    <!-- Background Layer 2 - Middle with opacity -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:src="@drawable/bgtengah"
        android:scaleType="centerCrop"
        android:alpha="0.4" />
    
    <!-- Background Layer 3 - Bottom -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:src="@drawable/bgbawah"
        android:scaleType="centerCrop" />
    
