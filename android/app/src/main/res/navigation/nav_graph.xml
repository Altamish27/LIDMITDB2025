<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/hijaiyah_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.google.mediapipe.examples.gesturerecognizer.ui.permissions.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.google.mediapipe.examples.gesturerecognizer.fragment.CameraFragment"
        android:label="CameraFragment">
        
        <argument
            android:name="selected_letter"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="letter_name"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="letter_position"
            app:argType="integer"
            android:defaultValue="-1" />

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/gallery_fragment"
        android:name="com.google.mediapipe.examples.gesturerecognizer.ui.gallery.GalleryFragment"
        android:label="GalleryFragment" />

    <fragment
        android:id="@+id/hijaiyah_list_fragment"
        android:name="com.google.mediapipe.examples.gesturerecognizer.ui.hijaiyah.HijaiyahListFragment"
        android:label="HijaiyahListFragment">

        <action
            android:id="@+id/action_hijaiyah_list_to_camera"
            app:destination="@id/camera_fragment" />

        <action
            android:id="@+id/action_hijaiyah_list_to_hijaiyah"
            app:destination="@id/hijaiyah_fragment" />

    </fragment>

    <fragment
        android:id="@+id/hijaiyah_fragment"
        android:name="com.google.mediapipe.examples.gesturerecognizer.ui.hijaiyah.HijaiyahFragment"
        android:label="HijaiyahFragment">

        <action
            android:id="@+id/action_hijaiyah_to_camera"
            app:destination="@id/camera_fragment" />

    </fragment>

</navigation>
